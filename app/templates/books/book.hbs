<h4>{{title}}</h4>

<ul>
  <li>{{genre}}</li>
  <li>
    {{#link-to "authors.author" author}}
      {{author.name}}
    {{/link-to}}
  </li>
  <li>{{year}}</li>
  <a {{bind-attr href=amazonLink}}>Amazon Link</a>
</ul>
<h1>Average Rating: {{avgRating}}</h1>
{{#each review in reviews}}
  <p>
    <strong>{{review.rating}}</strong>
    {{review.text}}
  </p>
{{/each}}

<img {{bind-attr src=image}} />
